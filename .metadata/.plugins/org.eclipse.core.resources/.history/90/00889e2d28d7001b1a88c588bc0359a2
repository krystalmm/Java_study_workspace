package service;

import java.util.ArrayList;

import entity.Member;

// インターフェイスは機能の概要！（メソッド名や引数がこんなものだということだけを決めておいて、実装は実装するクラスに任せる！）
public interface MemberService {
	
//	引数の数字に応じて異なる挨拶文を返すメソッド！
//	abstractとpublicは自動的に補完される！
//	abstractは抽象という意味で、抽象メソッドとは、具体的な処理内容を記述せず、メソッド名や引数などの定義だけを宣言するメソッド！！
	String greet(int i);
	
//	複数のmemberをリストにして返す（会員の一覧データを返す）メソッド！
	ArrayList<Member> getAll();
}
